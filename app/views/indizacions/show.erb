<div class="content-body">
    <div class="container-fluid mt-3">
        <i class="icon-notebook menu-icon btn-lg"></i><span class="h3">  Consultar Registros</span>
        <p>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table header-border table-hover verticle-middle">
                                <thead>
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Número de Lote</th>
                                        <th scope="col">Documento</th>
                                        <th scope="col">Número de Páginas</th>
                                        <th scope="col">Usuario</th>
                                        <th scope="col">Tipo de Documento</th>
                                        <th scope="col">Número del Documento</th>
                                        <th scope="col">Fecha del Documento</th>
                                        
                                        <th scope="col">Opción</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @indizacions.each do |indizacion| %>
                                        <tr>

                                            <th><%= indizacion.d_id %></th>
                                            <td><%= indizacion.d_nro_lote %></td>
                                            <td><a href="/uploads/digital/imglote/<%= indizacion.d_id %>/<%= indizacion.d_imglote %>" target="_blank" class="text-primary"><%= indizacion.d_documento %></a></td>
                                            <td><%= indizacion.d_nro_pages %></td>
                                            <td><%= indizacion.d_user_id %></td>
                                            <td><%= indizacion.i_tipo_doc %></td>
                                            <td><%= indizacion.i_num_doc %></td>
                                            <td><%= indizacion.i_fecha_doc %></td>
                                            <td>
                                                <a href=<%= indizacion.d_id %>/edit data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit">
                                                    <i class="fa fa-pencil color-muted m-r-5"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>