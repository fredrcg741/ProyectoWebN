<div class="content-body">
    <div class="container-fluid mt-3">
		<i class="icon-note menu-icon btn-lg"></i><span class="h3"> Registrar Usuario</span>
		<p>
        <div class="row">
			<div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="basic-form">
                            <%= form_for :user, :url => { :action => :create } do |user| %>
                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <input type="text" name="user[nombre]" class="form-control" placeholder="Nombre" required="">
                                    </div>
                                    <div class="form-group col-md-4">
                                        <input type="text" name="user[apellido_paterno]" class="form-control" placeholder="Apellido Paterno" required="">
                                    </div>
                                    <div class="form-group col-md-4">
                                        <input type="text" name="user[apellido_materno]" class="form-control" placeholder="Apellido Materno" required="">
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <input type="email" name="user[correo]" class="form-control" placeholder="Correo Electronico" required="">
                                    </div>
                                    <div class="form-group col-md-4">
                                        <select name="user[nivel]" id="inputState" class="form-control">
                                            <option selected=""> --- Selecciona Nivel ---</option>
                                            <option>Administrador</option>
                                            <option>Digitador</option>
                                            <option>Indizador</option>
                                            <option>Validador</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <input type="text" name="user[estado]" class="form-control" placeholder="Estado">
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <input type="text" name="user[empresa_id]" class="form-control" placeholder="Empresa">
                                    </div>
                                    <div class="form-group col-md-4">
                                        <input type="password" name="user[clave]" class="form-control" placeholder="Clave">
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-success btn-lg" id="toastr-success-top-right">Grabar</button>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>