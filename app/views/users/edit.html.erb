<div class="content-body">
    <div class="container-fluid mt-3">
		<i class="icon-note menu-icon btn-lg"></i><span class="h3"> Informaci√≥n de Usuario</span>
		<p>
        <div class="row">
			<div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="basic-form">
                            <%= form_for :user, :url => { :action => :update, :id => @user.id }, :method => :put do |user| %>
                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <input type="text" name="user[nombre]" class="form-control" placeholder="Nombres" required="" value="<%= @user.nombre %>">
                                    </div>
                                    <div class="form-group col-md-4">
                                        <input type="text" name="user[apellido_paterno]" class="form-control" placeholder="Apellido Paterno" required="" value="<%= @user.apellido_paterno %>">
                                    </div>
                                    <div class="form-group col-md-4">
                                        <input type="text" name="user[apellido_materno]" class="form-control" placeholder="Apellido Materno" required="" value="<%= @user.apellido_materno %>"">
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <input type="email" name="user[correo]" class="form-control" placeholder="Correo Electronico" required="" value="<%= @user.correo %>">
                                    </div>
                                    <div class="form-group col-md-4">
                                        <select name="user[nivel]" id="inputState" class="form-control">
                                            <option> --- Selecciona Nivel ---</option>
                                            <option <% if @user.nivel == "Administrador" %>selected=""<% end %>>Administrador</option>
                                            <option <% if @user.nivel == "Digitador" %>selected=""<% end %>>Digitador</option>
                                            <option <% if @user.nivel == "Indizador" %>selected=""<% end %>>Indizador</option>
                                            <option <% if @user.nivel == "Validador" %>selected=""<% end %>>Validador</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <input type="text" name="user[estado]" class="form-control" placeholder="Estado" value="<%= @user.estado %>">
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <input type="text" name="user[empresa_id]" class="form-control" placeholder="Empresa" value="<%= @user.empresa_id %>">
                                    </div>
                                    <div class="form-group col-md-4">
                                        <input type="password" name="user[clave]" class="form-control" placeholder="Clave" value="<%= @user.clave %>">
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-success btn-lg" id="toastr-success-top-right">Grabar</button>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>