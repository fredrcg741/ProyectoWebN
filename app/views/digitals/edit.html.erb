<div class="content-body">
    <div class="container-fluid mt-3">
		<i class="icon-note menu-icon btn-lg"></i><span class="h3"> Información de Digitalización</span>
		<p>
        <div class="row">
			<div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="basic-form">
                            <%= form_for :digital, :url => { :action => :update, :id => @digital.id }, :method => :put do |digital| %>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <input type="text" name="digital[nro_lote]" class="form-control" placeholder="Número de Lote" required="" value="<%= @digital.nro_lote %>">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <input type="number" name="digital[user_id]" class="form-control" placeholder="Usuario" required="" readonly="" value="<%= @digital.user_id %>">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <input type="text" name="digital[documento]" class="form-control" placeholder="Documento" required="" value="<%= @digital.documento %>">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <input type="number" name="digital[nro_pages]" class="form-control" placeholder="Número de Páginas" required="" value="<%= @digital.nro_pages %>">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-success btn-lg" id="toastr-success-top-right">Grabar</button>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>